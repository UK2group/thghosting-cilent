{
    "name": "thg/thg-client",
    "description": "THG Open API client",
    "type": "library",
    "version": "2.1.3",
    "license": "GPL-2.0-only",
    "autoload": {
        "psr-4": {
            "ThgHosting\\": "src/"
        }
    },
    "require": {
        "php": "^7.2 || ^8.0",
        "ext-curl": "*",
        "ext-fileinfo": "*",
